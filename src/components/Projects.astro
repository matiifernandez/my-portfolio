<section id="projects" class="py-24">
  <!--
    py-24: Padding vertical generoso (96px)
    Esto da "espacio para respirar" entre secciones
  -->

  <div class="mx-auto max-w-5xl px-6">
    <!-- Header de la sección -->
    <div class="mb-12 text-center animate-on-scroll">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
        Featured Projects
      </h2>
      <p class="mt-4 text-zinc-400">
        My Learning Journey Through Projects.
      </p>
    </div>

    <!-- Grid de proyectos -->
    <div class="grid gap-6 md:grid-cols-2 animate-on-scroll delay-200">
      <!--
        grid: Activa CSS Grid
        gap-6: Espacio entre items
        md:grid-cols-2: 2 columnas en pantallas medianas+

        Los proyectos "featured" ocupan 2 columnas (definido en ProjectCard)
      -->
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
      <!--
        {...project} es spread syntax
        Es como pasar todos los atributos del objeto como props individuales
        Equivalente a: title={project.title} description={project.description} etc.
      -->
    </div>
  </div>
</section>
