---
// Sección de Proyectos
// Aquí importamos y usamos el componente ProjectCard

import ProjectCard from './ProjectCard.astro';

// Definimos los proyectos como data
// Esto es como tener un array de objetos que iteras con .each en Rails
// ACTUALIZA ESTO con tus proyectos reales
const projects = [
  {
    title: "Kizuna Lingua",
    description: "Kizuna Lingua description goes here",
    tags: ["Ruby on Rails", "PostgreSQL", "Stimulus", "Ruby LLM Integration"],
    image: "/images/kizuna-lingua.png",
    demoUrl: "https://www.kizunalingua.com/",
    repoUrl: "https://github.com/matiifernandez/kizuna-lingua",
    featured: true
  },
  {
    title: "UI Forge",
    description: "UI Forge description goes here",
    tags: ["Ruby on Rails", "Ruby LLM Integration", "JavaScript", "APIs", "CSS"],
    image: "/images/ui-forge.png",
    demoUrl: "",
    repoUrl: "https://github.com/matiifernandez/ui-forge-v2",
    featured: false
  },
  {
    title: "Code Editor",
    description: "Code editor description goes here",
    tags: ["JavaScript", "HTML", "CSS"],
    image: "/images/code-editor.png",
    demoUrl: "",
    repoUrl: "https://github.com/matiifernandez/code-editor",
    featured: false
  },
  // Añade más proyectos aquí cuando los tengas
];
---

<section id="projects" class="py-24">
  <!--
    py-24: Padding vertical generoso (96px)
    Esto da "espacio para respirar" entre secciones
  -->

  <div class="mx-auto max-w-5xl px-6">
    <!-- Header de la sección -->
    <div class="mb-12 text-center animate-on-scroll">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
        Featured Projects
      </h2>
      <p class="mt-4 text-zinc-400">
        My Learning Journey Through Projects.
      </p>
    </div>

    <!-- Grid de proyectos -->
    <div class="grid gap-6 md:grid-cols-2 animate-on-scroll delay-200">
      <!--
        grid: Activa CSS Grid
        gap-6: Espacio entre items
        md:grid-cols-2: 2 columnas en pantallas medianas+

        Los proyectos "featured" ocupan 2 columnas (definido en ProjectCard)
      -->
      {projects.map((project) => (
        <ProjectCard {...project} />
      ))}
      <!--
        {...project} es spread syntax
        Es como pasar todos los atributos del objeto como props individuales
        Equivalente a: title={project.title} description={project.description} etc.
      -->
    </div>
  </div>
</section>
