---
// ProjectCard: Componente reutilizable para cada proyecto
// Similar a un partial de Rails con locals

interface Props {
  title: string;
  description: string;
  tags: string[];
  image?: string;        // Opcional - URL de la imagen
  demoUrl?: string;      // Opcional - Link al demo
  repoUrl?: string;      // Opcional - Link al repo
  featured?: boolean;    // Opcional - Si es proyecto destacado
}

const { title, description, tags, image, demoUrl, repoUrl, featured = false } = Astro.props;
---

<article
  class:list={[
    // class:list es como una forma elegante de combinar clases condicionales
    // Similar a class_names en Rails
    "group relative overflow-hidden rounded-2xl border border-zinc-800 bg-zinc-900/50 transition-all duration-300",
    "hover:border-zinc-700 hover:bg-zinc-900",
    featured && "md:col-span-2" // Si es featured, ocupa 2 columnas
  ]}
>
  <!--
    group: Permite que elementos hijos reaccionen al hover del padre
    rounded-2xl: Bordes muy redondeados (16px) - más moderno
    bg-zinc-900/50: Fondo con 50% de opacidad (efecto glass)
  -->

  <!-- Imagen del proyecto (placeholder si no hay) -->
  <div class="aspect-video w-full overflow-hidden bg-zinc-800">
    {image ? (
      <img
        src={image}
        alt={`Screenshot of ${title}`}
        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
    ) : (
      <div class="flex h-full w-full items-center justify-center text-zinc-600">
        <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}
    <!--
      aspect-video: Mantiene ratio 16:9
      group-hover:scale-105: Zoom sutil al hacer hover (efecto elegante)
      duration-500: Animación lenta para que sea suave
    -->
  </div>

  <!-- Contenido -->
  <div class="p-6">
    <h3 class="mb-2 text-xl font-semibold text-zinc-100">{title}</h3>
    <p class="mb-4 text-sm text-zinc-400 line-clamp-2">{description}</p>
    <!--
      line-clamp-2: Limita a 2 líneas y añade "..." si es más largo
      Esto mantiene las tarjetas con altura consistente
    -->

    <!-- Tags de tecnologías -->
    <div class="mb-4 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-zinc-800 px-3 py-1 text-xs text-zinc-400">
          {tag}
        </span>
      ))}
    </div>

    <!-- Links -->
    <div class="flex gap-4">
      {demoUrl && (
        <a
          href={demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 text-sm text-emerald-400 hover:text-emerald-300 transition-colors"
        >
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Live Demo
        </a>
      )}
      {repoUrl && (
        <a
          href={repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 text-sm text-zinc-400 hover:text-zinc-300 transition-colors"
        >
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Code
        </a>
      )}
    </div>
  </div>

  <!-- Efecto de brillo en hover (muy sutil) -->
  <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
    <div class="absolute inset-0 bg-gradient-to-t from-emerald-500/5 to-transparent"></div>
  </div>
</article>
